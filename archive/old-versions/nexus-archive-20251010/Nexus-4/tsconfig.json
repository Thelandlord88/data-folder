{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./nexus",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["nexus/loaders/**/*", "nexus/validation/**/*", "nexus/types/**/*", "nexus/demo-personality-loader.ts", "nexus/NEXUS.engine.v2.ts", "nexus/nexus-runtime.v2.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
